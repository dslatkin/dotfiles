{{ if or .env.mac .env.debian -}}
#!/bin/bash
echo "dotfiles: $0"
set -euo pipefail

if ! command -v nu &> /dev/null
then
    echo "dotfiles: Installing Nushell"
    brew install --quiet nushell
    nu --version
else
    echo "dotfiles: Nushell is already installed"
fi

