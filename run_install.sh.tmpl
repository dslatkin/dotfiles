sudo apt-get install fish -y
echo $(fish -v)
info Changing shell for "$USER"
cat /etc/passwd
sudo chsh -s /usr/bin/fish "$USER"
info Shell changed
cat /etc/passwd
{{   end }}
{{ end }}

info Installing starship
sh -c "$(curl -fsSL https://starship.rs/install.sh)" -- --yes --verbose
starship init bash >> ~/.bashrc
